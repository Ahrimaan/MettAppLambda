{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Serverless",
        "program": "${workspaceFolder}/node_modules/.bin/sls",
        "cwd": "${workspaceFolder}",
        "args": [
          "offline",
          "start",
          "--stage=development",
          "--region=us-west-2",
          "--host=192.168.2.19",
          "--port=3000",
          "--noTimeout"
        ],
        "sourceMaps": true,
        "smartStep": true
      }
    ]
  }